<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <sk.spsepo.lesko.steeplechasegame.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Tlačidlo pauzy -->
    <ImageButton
        android:id="@+id/btn_pause_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_pause" />

    <!-- Spomaľ - naľavo dole -->
    <ImageButton
        android:id="@+id/btn_reduce"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:background="@drawable/rounded_transparent_button"
        android:src="@drawable/ic_minus"
        android:contentDescription="Spomal" />

    <!-- Pridaj - napravo dole -->
    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:background="@drawable/rounded_transparent_button"
        android:src="@drawable/ic_plus"
        android:contentDescription="Pridaj" />

    <!-- Štart - vycentrovaný dole -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:width="400dp"
        android:background="@drawable/rounded_opaque_button"
        android:text="Štart"
        android:textColor="@android:color/white" />

</RelativeLayout>