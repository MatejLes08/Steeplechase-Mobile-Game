<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Image that will move -->
    <ImageView
        android:id="@+id/pozadie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pozadie1" />


    <!-- All other UI elements will be above the background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">


        <Button
            android:id="@+id/tlacZrusit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="ukoncitHru"
            android:text="exit" />

        <TextView
            android:id="@+id/textTeren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Terén: Lúka"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textOstava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Počet metrov do cieľa: 2000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textRychlost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Aktuálna rýchlosť: "
            android:textColor="#AD141111"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textEnergia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Energia koňa: 100"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textCas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Čas: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textRekord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="60dp"
            android:text="Rekord:"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/obrKon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/kon1" />


        <Button
            android:id="@+id/tlacPridaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="pridaj"
            android:text="Pridaj" />

        <Button
            android:id="@+id/tlacSpomal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:onClick="spomal"
            android:text="Spomaľ" />


    </LinearLayout>
</FrameLayout>
